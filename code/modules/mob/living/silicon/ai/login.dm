/mob/living/silicon/ai/Login()
	..()
	for(var/obj/effect/rune/rune in world)
		var/image/blood = image(loc = rune)
		blood.override = 1
		client.images += blood

	if(stat != DEAD)
		for(var/obj/machinery/ai_status_display/O in GLOB.ai_status_displays) //change status
			O.mode = 1
			O.emotion = "Neutral"
	view_core()
