function keyWhichToNote(which) {
    switch(which) {
        case 113:
        case 122:
        case 50:
        case 115:
		case 105:
		case 44:
            return 3;
        case 119:
        case 120:
        case 51:
        case 110:
            return 4;
        case 101:
        case 99:
            return 5;
        case 114:
        case 118:
        case 53:
        case 103:
            return 6;
        case 116:
        case 98:
        case 54:
        case 104:
            return 7;
        case 121:
        case 110:
        case 55:
        case 106:
            return 1;
        case 117:
        case 109:
            return 2;
        default:
            return 0;
    }
}

function keyWhichToSharpFlat(which) {
    switch(which) {
        case 50:
        case 115:
        case 51:
        case 110:
        case 53:
        case 103:
        case 54:
        case 104:
        case 55:
        case 106:
            return "#";
        default:
            return "n";
    }
}

function keyWhichToOctave(which) {
    switch(which) {
        default:
            return 5;
    }
}


var lines = $.parseJSON($("#lines").text());
renderLines(lines);
</script>
